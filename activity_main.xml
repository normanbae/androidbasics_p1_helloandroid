<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.baeinc.normanbae.helloandroid.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/imgRandom"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"/>

    <TextView
        style="@style/MoreInfoText"
        android:paddingTop="16dp"
        android:text="@string/this_and_more" />

    <TextView
        style="@style/MoreInfoText"
        android:text="@string/website" />

    <TextView
        style="@style/ContactText"
        android:paddingTop="8dp"
        android:text="@string/company_name" />

    <TextView
        style="@style/ContactText"
        android:text="@string/company_address_1" />

    <TextView
        style="@style/ContactText"
        android:text="@string/company_address_2" />

    <TextView
        style="@style/ContactText"
        android:paddingBottom="16dp"
        android:text="@string/company_phone" />
        <!--add icons with DrawableLeft?-->

</LinearLayout>
